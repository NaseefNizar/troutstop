<form action="/admin/editproduct?id=<%=product._id%>" method="post" class="my-auto" style="height: 70vh; margin-top: 50px;"
enctype="multipart/form-data">
<div class="container h-70" style="width:100%px;">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card bg-transparent" style="border-radius: 25px;">
                <div class="card-body p-md-2">
                    <div class="row justify-content-center">
                        <div class="col-md-2 col-lg-6 col-xl-5 order-2 order-lg-1 width-50">

                            <form class="mx-1 mx-md-2">

                                <% if(typeof message !=='undefined' ){%>
                                    <p style="color:green">
                                        <%= message %>
                                    </p>
                                    <% } %>

                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Product name</label>
                                        <input type="text" id="form3Example1c" class="form-control" name="name" value='<%=product.name%>'required />

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label  select-label"
                                            for="form3Example1c">Category name</label>

                                        <select name="category" class="form-control">
                                         
                                            
                                            <% category.forEach((row)=>{%>
                                            <option <% if(row._id==product.category)selected %> value="<%=row._id%>"><%= row.name %></option>
                                            <% }) %>

                                        </select>

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Description</label>
                                        <!-- <input type="text" id="form3Example1c" class="form-control"
                                            name="description" placeholder="Product description"required /> -->
                                            <textarea name="description" id="" cols="45" rows="5" ><%=product.description%></textarea>

                                    </div>
                                </div>


                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4c">Price</label>
                                        <input type="number" id="form3Example4c" class="form-control"
                                            name="price" value='<%=product.price%>'required />

                                    </div>
                                </div>



                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label"
                                            for="form3Example4c">Stock</label>
                                        <input type="number" id="form3Example4c" class="form-control"
                                            name="stock"value='<%=product.inStock%>' required />

                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-2">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Brand</label>
                                        <input type="text" id="form3Example1c" class="form-control"
                                            name="brand" max="5" value='<%=product.brand%>' required />

                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4c">Image</label>
                                        <input multiple type="file" id="form3Example4c" class="form-control" accept="image/*"
                                            name="images"  />
                                    </div>
                                </div>

                                <% for( let i = 0;i<product.images.length;i++){ %>
                                <div>
                                    <img src="uploads/<%= product.images[i] %>" alt="" width="100">
                                    <button class="close delete-btn"
                                        data-img="<%=product.images[i] %>"
                                        data-id="<%=product._id%>">
                                        &times;
                                    </button>


                                </div>
                                <%}%>

                                <div class="d-flex justify-content-center mx-4  mb-lg-4">
                                    <button type="submit" value="Register"
                                        class="btn btn-primary text-light" >Edit product</button>
                                   <!-- <button class="btn btn-primary me-4"> <a href="/admin/adminProduct"
                                        class="ml-2 text-white text-decoration-none">Go Back</a></button> -->
                                </div>

                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>






    

    

