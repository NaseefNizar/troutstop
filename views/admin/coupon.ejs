            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Edit coupon</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">


                <div class="form-group row">
                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Coupon Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control"  name="couponname" id="name">
                  </div>

                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Discount value<span class="text-danger">*</span></label>
                    <input type="text" class="form-control"  name="discount" id="discount">
                  </div>

                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Min value<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="minvalue" id="minvalue">
                  </div>

                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Max Discount <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="maxdiscount" id="maxdiscount">
                  </div>

                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Description <span class="text-danger">*</span></label>
                    <textarea name="description" class="form-control" cols="50" rows="3" id="description"></textarea>     
                  </div>

                  <div class="col-md-6">
                    <label for="c_fname" class="text-black">Expiry date <span class="text-danger">*</span></label>
                    <input type="datetime-local" class="form-control"  name="expiry" id="expirydate">
                  </div>
                  <input type="hidden" class="form-control"  name="id" id="id">

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div> 
       </div>
      </form>  



<script>
    function getData(id,name,discount,description,minvalue,maxdiscount,expirydate){
        $('#id').val(id);
        $('#name').val(name);
        $('#discount').val(discount);
        $('#description').val(description);
        $('#minvalue').val(minvalue);
        $('#maxdiscount').val(maxdiscount);
        var dateString = expirydate;
      var date = new Date(dateString);
      var isoDateTime = date.toISOString().slice(0, 16);
      $('#expirydate').val(isoDateTime);

    }
</script>


